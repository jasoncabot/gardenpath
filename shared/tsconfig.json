{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationDir": "./dist",
        "module": "es6",
        "noImplicitAny": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "es5",
        "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}